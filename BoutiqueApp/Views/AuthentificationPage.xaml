<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BoutiqueApp.Views.AuthentificationPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Authentification" FontSize="Large" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

            <Entry x:Name="UsernameEntry" Placeholder="Nom d'utilisateur" Margin="0,10,0,10" />
            <Entry x:Name="PasswordEntry" Placeholder="Mot de passe" IsPassword="True" Margin="0,0,0,10" />

            <Button Text="Connexion" Clicked="OnLoginClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />

            <Label x:Name="ErrorLabel" Text="" TextColor="Red" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" />

            <!-- Add any additional UI elements you need for authentication -->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>